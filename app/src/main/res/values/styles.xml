<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@color/p_dark</item>
        <item name="colorAccent">@color/color_primary</item>
    </style>

    <style name="splash_text">
        <item name="android:textColor">@color/wewak</item>
        <item name="android:fontFamily">@font/abel</item>
        <item name="android:textSize">@dimen/splash_text_size</item>
    </style>

    <style name="splash_small_image">
        <item name="android:layout_width">@dimen/splash_small_image_size</item>
        <item name="android:layout_height">@dimen/splash_small_image_size</item>
    </style>

    <style name="splash_large_image">
        <item name="android:layout_width">@dimen/splash_large_image_size</item>
        <item name="android:layout_height">@dimen/splash_large_image_size</item>
    </style>

    <style name="collapse_toolbar_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/collapse_toolbar_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="collapse_toolbar_image">
        <item name="android:layout_width">@dimen/collapse_toolbar_image_width</item>
        <item name="android:layout_height">@dimen/collapse_toolbar_image_height</item>
        <item name="android:layout_marginBottom">@dimen/collapse_toolbar_image_margin_bottom</item>
    </style>

    <style name="item_drink_image">
        <item name="android:layout_width">@dimen/item_drink_image_size</item>
        <item name="android:layout_height">@dimen/item_drink_image_size</item>
        <item name="android:layout_marginTop">@dimen/item_drink_image_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/item_drink_image_margin_end</item>
        <item name="android:textSize">@dimen/item_drink_image_text_size</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="item_drink_title">
        <item name="android:layout_marginStart">@dimen/item_drink_title_margin_start</item>
        <item name="android:layout_marginTop">@dimen/item_drink_title_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/item_drink_title_margin_bottom</item>
        <item name="android:textSize">@dimen/item_drink_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">sans-serif-condensed</item>
    </style>

    <style name="item_drink_description">
        <item name="android:textSize">@dimen/item_drink_description_text_size</item>
    </style>

</resources>